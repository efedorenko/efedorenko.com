{% extends "_layout-normal" %}

{% set title = 'Eugene Fedorenko is designing' %}
{% set metaDesc = 'TODO: description' %}
{% set bodyMods = 'c-body--works' %}

{% block headMeta %}
  {#
  <link rel="alternate" href="{{ url('blog') }}/feed.atom" type="application/atom+xml" title="DeployBot Blog">

  <meta property="og:title" content="{{ title }}">
