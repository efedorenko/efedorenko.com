{% extends "_layout-normal" %}

{% set title = 'Writing by Eugene Fedorenko' %}
{% set metaDesc = 'Collection of blog posts and articles written by Eugene Fedorenko and published at various websites.' %}

{% block headMeta %}
  {% include 'elements/components/open-graph/_open-graph' with {
    'url': url('writing'),
    'title': title,
    'description': metaDesc
  } only %}

  <link rel="canonical" href="{{ url('writing') }}">
  <link rel="alternate" href="{{ url('writing') }}/feed.atom" type="application/atom+xml" title="Writing by Eugene Fedorenko">
{% endblock %}

{% block content %}

  <div class="u-container u-container--narrow">

    <div class="c-page-head">
      <h1 class="o-page-title c-page-head_title">Writing <em class="o-page-title_note">(sometimes)</em></h1>
    </div>

    {% include 'elements/components/posts/_posts' with {'channel': 'writing', 'limit': 10, 'type': 'excerpts'} %}
  </div>

{% endblock %}
